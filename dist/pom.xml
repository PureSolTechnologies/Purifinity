<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- Purifinity -->
		<purifinity.version>0.3.1</purifinity.version>
		<!-- WildFly -->
		<wildfly.version>8.2.0.Final</wildfly.version>
		<!-- Cassandra -->
		<cassandra.version>2.0.13</cassandra.version>
	</properties>

	<groupId>com.puresoltechnologies.purifinity.distribution</groupId>
	<artifactId>distribution-parent</artifactId>
	<version>0.3.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Purifinity Distribution: ${project.artifactId}</name>
	<description>This Maven project and all its sub-projects build the distributions of Purifinity.</description>

	<inceptionYear>2009</inceptionYear>
	<url>http://purifinity.com</url>

	<organization>
		<name>PureSol Technologies</name>
		<url>http://puresol-technologies.com</url>
	</organization>

	<licenses>
		<license>
			<name>PureSol Technologies Commercial License</name>
		</license>
	</licenses>

	<scm>
		<developerConnection>scm:git:git@git:Purifinity</developerConnection>
		<connection>scm:git:git@git:Purifinity</connection>
		<url>http://git/gitweb/</url>
		<tag>distribution-v0.3.0</tag>
	</scm>

	<developers>
		<developer>
			<name>Rick-Rainer Ludwig</name>
			<email>ludwig@puresol-technologies.com</email>
			<organization>PureSol Technologies</organization>
			<organizationUrl>http://puresol-technologies.com</organizationUrl>
			<url>http://rick-rainer-ludwig.com</url>
		</developer>
	</developers>

	<issueManagement>
		<system>Redmine</system>
		<url>https://bugs.puresol-technologies.net/projects/purifinity-webui</url>
	</issueManagement>

	<ciManagement>
		<system>Jenkins</system>
		<url>http://ci.puresol-technologies.net</url>
	</ciManagement>

	<distributionManagement>
		<!-- site>
			<id>FTPPureSolTechnologiesCom</id>
			<name>FTPPureSolTechnologiesCom</name>
			<url>ftp://puresol-technologies.com/opensource/purifinity-webui</url>
		</site -->
		<repository>
			<id>libs-release-local</id>
			<name>Repository libs-release-local</name>
			<url>http://repo.puresol-technologies.net/libs-release-local</url>
		</repository>
		<snapshotRepository>
			<id>libs-snapshot-local</id>
			<name>Repository libs-snapshot-local</name>
			<url>http://repo.puresol-technologies.net/libs-snapshot-local</url>
		</snapshotRepository>
	</distributionManagement>

	<repositories>
		<repository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>libs-release</name>
			<url>http://repo.puresol-technologies.net/libs-release</url>
		</repository>
		<repository>
			<snapshots />
			<id>snapshots</id>
			<name>libs-snapshot</name>
			<url>http://repo.puresol-technologies.net/libs-snapshot</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>central</id>
			<name>plugins-release</name>
			<url>http://repo.puresol-technologies.net/plugins-release</url>
		</pluginRepository>
		<pluginRepository>
			<snapshots />
			<id>snapshots</id>
			<name>plugins-snapshot</name>
			<url>http://repo.puresol-technologies.net/plugins-snapshot</url>
		</pluginRepository>
	</pluginRepositories>

	<dependencyManagement>
		<dependencies>
			<!-- ========== -->
			<!-- Purifinity -->
			<!-- ========== -->
			<!-- DDL -->
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.server</groupId>
				<artifactId>global.ddl</artifactId>
				<version>${purifinity.version}</version>
				<scope>runtime</scope>
			</dependency>
			<!-- Application -->
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.server</groupId>
				<artifactId>passwordstore.app</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.server</groupId>
				<artifactId>server.app</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.server</groupId>
				<artifactId>systemmonitor.app</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<!-- Plugins -->
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>fortran2008.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>java7.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>metrics.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>repository.directory.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>repository.git.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
				<artifactId>repository.subversion.plugin</artifactId>
				<version>${purifinity.version}</version>
				<type>ear</type>
				<scope>runtime</scope>
			</dependency>
			<dependency>
				<groupId>com.puresoltechnologies.purifinity.webui</groupId>
				<artifactId>webui</artifactId>
				<version>${purifinity.version}</version>
				<type>zip</type>
				<classifier>bin</classifier>
				<scope>runtime</scope>
			</dependency>
			<!-- WildFly -->
			<dependency>
				<groupId>org.wildfly</groupId>
				<artifactId>wildfly-server</artifactId>
				<version>${wildfly.version}</version>
				<type>zip</type>
				<scope>runtime</scope>
			</dependency>
			<!-- Cassandra -->
			<dependency>
				<groupId>org.apache.cassandra</groupId>
				<artifactId>cassandra</artifactId>
				<version>${cassandra.version}</version>
				<classifier>bin</classifier>
				<type>tar.gz</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.5.3</version>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.5.2</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.scm</groupId>
						<artifactId>maven-scm-provider-gitexe</artifactId>
						<version>1.9.4</version>
					</dependency>
				</dependencies>
				<configuration>
					<tagNameFormat>distribution-v@{project.version}</tagNameFormat>
					<autoVersionSubmodules>true</autoVersionSubmodules>
					<useReleaseProfile>false</useReleaseProfile>
					<arguments> -Prelease</arguments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<version>3.3</version>
			</plugin>
		</plugins>
		<extensions>
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>2.5</version>
			</extension>
		</extensions>
	</build>

	<modules>
		<module>community</module>
	</modules>
</project>
