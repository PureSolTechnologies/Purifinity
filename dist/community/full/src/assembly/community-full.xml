<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>Purifinity-Community-${project.version}</baseDirectory>

	<dependencySets>
		<dependencySet>
			<includes>
				<include>org.apache.hadoop:hadoop:tar.gz:distribution:${hadoop.version}</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/etc/hadoop/core-site.xml</exclude>
					<exclude>**/etc/hadoop/hdfs-site.xml</exclude>
					<exclude>**/etc/hadoop/mapred-site.xml</exclude>
					<exclude>**/etc/hadoop/yarn-site.xml</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.apache.hbase:hbase:tar.gz:distribution:${hbase.version}</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>**/conf/hbase-site.xml</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.apache.phoenix:phoenix:jar:server:${phoenix.version}</include>
			</includes>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib/hbase-${hbase.version}/lib</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.wildfly:wildfly-server:zip:${wildfly.version}</include>
			</includes>
			<unpackOptions>
				<excludes>
					<exclude>*/welcome-content/**/*</exclude>
				</excludes>
			</unpackOptions>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.server:global.ddl:jar:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>ddl</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.server:*.app:ear:${project.version}</include>
				<include>com.puresoltechnologies.purifinity.plugins:*.plugin:ear:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib/wildfly-${wildfly.version}/standalone/deployments</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.webui:webui:zip:bin:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib/wildfly-${wildfly.version}/welcome-content</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.server:wildfly.modules.*:zip:zip:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib/wildfly-${wildfly.version}/modules/system/layers/base</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.server:database.hadoop.configuration:jar:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib/hadoop-${hadoop.version}</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>com.puresoltechnologies.purifinity.server:database.hbase.configuration:jar:${project.version}</include>
			</includes>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib/hbase-${hbase.version}</outputDirectory>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>src/main/resources/bin</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>bin</outputDirectory>
			<filtered>true</filtered>
			<fileMode>755</fileMode>
			<directoryMode>755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/wildfly</directory>
			<includes>
				<include>**/*</include>
			</includes>
			<outputDirectory>lib/wildfly-${wildfly.version}</outputDirectory>
			<filtered>false</filtered>
			<fileMode>644</fileMode>
			<directoryMode>755</directoryMode>
		</fileSet>
	</fileSets>

</assembly>