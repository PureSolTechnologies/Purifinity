<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         name="Purifinity"
         point="org.eclipse.core.runtime.applications">
      <application
            visible="true">
         <run
               class="com.puresol.purifinity.client.application.Purifinity">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File"
               mnemonic="F">
            <command
                  commandId="org.eclipse.ui.file.print"
                  icon="icons/16x16/printer.png"
                  id="print"
                  label="Print..."
                  mnemonic="P"
                  style="push">
            </command>
            <separator
                  name="coding.client.plugin.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="com.puresol.purifinity.client.application.handler.SwitchWorkspaceHandler"
                  icon="icons/16x16/arrow_switch.png"
                  id="switchWorkspace"
                  label="Switch Workspace..."
                  mnemonic="W"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.restartWorkbench"
                  icon="icons/16x16/arrow_refresh.png"
                  id="restart"
                  label="Restart"
                  style="push">
            </command>
            <separator
                  name="RichClient.Repository.separator5"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.export"
                  icon="icons/16x16/document_export.png"
                  id="export"
                  label="Export..."
                  mnemonic="E"
                  style="push">
            </command>
            <separator
                  name="RichClient.Repository.separator6"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  icon="icons/16x16/door_out.png"
                  id="Exit"
                  label="Exit"
                  mnemonic="x"
                  style="push">
            </command>
         </menu>
         <menu
               id="options"
               label="Options"
               mnemonic="O">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  icon="icons/16x16/wrench_orange.png"
                  id="preferences"
                  label="Preferences..."
                  mnemonic="P"
                  style="push">
            </command>
         </menu>
         <menu
               id="window"
               label="Window"
               mnemonic="W">
            <command
                  commandId="org.eclipse.ui.window.newWindow"
                  icon="icons/16x16/application.png"
                  id="newWindow"
                  label="New Window"
                  mnemonic="N"
                  style="push">
            </command>
            <separator
                  name="RichClient.Repository.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.views.showView"
                  icon="icons/16x16/layout_content.png"
                  id="showView"
                  label="Show View..."
                  mnemonic="V"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.perspectives.showPerspective"
                  icon="icons/16x16/layout.png"
                  id="showPerspective"
                  label="Show Perspective..."
                  mnemonic="P"
                  style="push">
            </command>
            <separator
                  name="RichClient.Repository.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.window.customizePerspective"
                  icon="icons/16x16/layout_edit.png"
                  id="customizePerspectiveAs"
                  label="Customize Perspective..."
                  mnemonic="A"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.savePerspective"
                  icon="icons/16x16/disk.png"
                  id="savePerspective"
                  label="Save Perspective As..."
                  mnemonic="A"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  icon="icons/16x16/layout_error.png"
                  id="resetPerspective"
                  label="Reset Perspective..."
                  mnemonic="R"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.closePerspective"
                  icon="icons/16x16/layout_delete.png"
                  id="closePerspective"
                  label="Close Perspective"
                  mnemonic="C"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.window.closeAllPerspectives"
                  icon="icons/16x16/cross.png"
                  id="closeAllPerspectives"
                  label="Close All Perspectives"
                  mnemonic="l"
                  style="push">
            </command>
         </menu>
         <menu
               id="help"
               label="Help"
               mnemonic="H">
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  icon="icons/16x16/flower.png"
                  id="welcome"
                  label="Welcome"
                  mnemonic="W"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  id="about"
                  label="About Purifinity..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipse.debug.ui"
            class="com.puresol.purifinity.client.application.views.OsgiDebugView"
            id="com.puresol.purifinity.client.application.views.OsgiDebugView"
            name="OSGI Debug"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.puresol.purifinity.client.application.handler.SwitchWorkspaceHandler"
            id="com.puresol.purifinity.client.application.handler.SwitchWorkspaceHandler"
            name="Switch Workspace">
      </command>
      <command
            defaultHandler="com.puresol.purifinity.client.application.handler.PrintHandler"
            id="org.eclipse.ui.file.print"
            name="Print">
      </command>
      <command
            defaultHandler="com.puresol.purifinity.client.application.handler.ExportHandler"
            id="org.eclipse.ui.file.export"
            name="Export">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="com.puresol.purifinity.client.application.PurifinityIntroPart"
            id="com.puresol.purifinity.client.application.PurifinityIntroPart">
      </intro>
      <introProductBinding
            introId="com.puresol.purifinity.client.application.PurifinityIntroPart"
            productId="com.puresol.purifinity.client.application.plugin.PurifinityFull">
      </introProductBinding>
      <introProductBinding
            introId="com.puresol.purifinity.client.application.PurifinityIntroPart"
            productId="com.puresol.purifinity.client.application.plugin.PurifinityBase">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            content="introContent.xml"
            id="com.puresol.purifinity.client.application.plugin.introConfigId"
            introId="com.puresol.purifinity.client.application.PurifinityIntroPart">
         <presentation
               home-page-id="root">
            <implementation
                  kind="swt"
                  os="win32,linux,macosx"
                  style="content/shared.css">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="PurifinityBase"
         name="Purifinity"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.puresol.purifinity.client.application.plugin.application"
            name="Purifinity">
         <property
               name="aboutImage"
               value="/com.puresol.purifinity.client.common.branding.plugin/icons/alt_about.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupProgressRect"
               value="50,100,445,32">
         </property>
         <property
               name="startupMessageRect"
               value="28,252,445,20">
         </property>
      </product>
   </extension>
   <extension
         id="PurifinityFull"
         name="Purifinity"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.puresol.purifinity.client.application.plugin.application"
            name="Purifinity">
         <property
               name="aboutImage"
               value="/com.puresol.purifinity.client.common.branding.plugin/icons/alt_about.gif">
         </property>
         <property
               name="startupForegroundColor"
               value="000000">
         </property>
         <property
               name="startupProgressRect"
               value="50,100,445,32">
         </property>
         <property
               name="startupMessageRect"
               value="28,252,445,20">
         </property>
      </product>
   </extension>

</plugin>
