<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.puresol.coding.client.common.evaluation.EvaluationAPIStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.puresol.coding.client.common.evaluation.perspectives.EvaluationPerspective"
            id="com.puresol.coding.client.common.evaluation.perspectives.EvaluationPerspective"
            name="Code Evaluation">
      </perspective>
      <perspective
            class="com.puresol.coding.client.common.evaluation.perspectives.MetricsPerspective"
            id="com.puresol.coding.client.common.evaluation.perspectives.MetricsPerspective"
            name="Code Metrics">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.puresol.coding.client.common.evaluation.Evaluation"
            name="Evaluation">
      </category>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.AvailableEvaluatorsView"
            id="com.puresol.coding.client.common.evaluation.views.AvailableEvaluatorsView"
            name="Available Evaluators"
            restorable="true">
      </view>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.MetricSelectorView"
            id="com.puresol.coding.client.common.evaluation.views.MetricSelectorView"
            name="Metric Selector">
      </view>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.EvaluatorSelectorView"
            id="com.puresol.coding.client.common.evaluation.views.EvaluatorSelectorView"
            name="Evaluator Selector"
            restorable="true">
      </view>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.MetricsMapView"
            id="com.puresol.coding.client.common.evaluation.views.MetricsMapView"
            name="Metrics Map"
            restorable="true">
      </view>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.DefectDensityMapView"
            id="com.puresol.coding.client.common.evaluation.views.DefectDensityMapView"
            name="Defect Density Map"
            restorable="true">
      </view>
   </extension>

</plugin>
