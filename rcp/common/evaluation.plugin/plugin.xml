<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.puresol.coding.client.common.evaluation.EvaluationAPIStartup">
      </startup>
      <startup
            class="com.puresol.coding.client.common.evaluation.EvaluationImplStartup">
      </startup>
      <startup
            class="com.puresol.coding.client.common.evaluation.MetricsStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.puresol.coding.client.common.evaluation.perspectives.EvaluationPerspective"
            id="com.puresol.coding.client.common.evaluation.perspectives.EvaluationPerspective"
            name="Code Evaluation">
      </perspective>
      <perspective
            class="com.puresol.coding.client.common.evaluation.perspectives.MetricsPerspective"
            id="com.puresol.coding.client.common.evaluation.perspectives.MetricsPerspective"
            name="Code Metrics">
      </perspective>
      <perspective
            class="com.puresol.coding.client.common.evaluation.perspectives.QualityDashboardPerspective"
            id="com.puresol.coding.client.common.evaluation.perspectives.QualityDashboardPerspective"
            name="Quality Dashboard">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="com.puresol.coding.client.common.evaluation.Evaluation"
            name="Evaluation">
      </category>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.AvailableEvaluatorsView"
            id="com.puresol.coding.client.common.evaluation.views.AvailableEvaluatorsView"
            name="Available Evaluators"
            restorable="true">
      </view>
      <view
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.DefectDensityMapView"
            id="com.puresol.coding.client.common.evaluation.views.DefectDensityMapView"
            name="Defect Density Map"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.MetricsMapView"
            id="com.puresol.coding.client.common.evaluation.views.MetricsMapView"
            name="Metrics Map"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.MetricsTableView"
            id="com.puresol.coding.client.common.evaluation.views.MetricsTableView"
            name="Metrics Table"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.CorrelationChartView"
            id="com.puresol.coding.client.common.evaluation.views.CorrelationChartView"
            name="Correlation Chart"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.ParetoChartView"
            id="com.puresol.coding.client.common.evaluation.views.ParetoChartView"
            name="Pareto Chart"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="com.puresol.coding.client.common.evaluation.Evaluation"
            class="com.puresol.coding.client.common.evaluation.views.HistogramChartView"
            id="com.puresol.coding.client.common.evaluation.views.HistogramChartView"
            name="Histogram Chart"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=analysis">
         <menu
               id="Evaluation"
               label="Evaluation"
               mnemonic="E">
            <command
                  commandId="com.puresol.coding.client.common.evaluation.handler.ReEvaluateHandler"
                  id="Re-evaluate"
                  label="Re-evaluate"
                  mnemonic="R"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.puresol.coding.client.common.evaluation.handler.ReEvaluateHandler"
            description="Reevaluates the current analysis run."
            id="com.puresol.coding.client.common.evaluation.handler.ReEvaluateHandler"
            name="Re-evaluate">
      </command>
   </extension>

</plugin>
