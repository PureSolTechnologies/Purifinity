<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.webui</groupId>
		<artifactId>webui-parent</artifactId>
		<version>0.4.0-SNAPSHOT</version>
	</parent>

	<artifactId>webui.test</artifactId>
	<name>Purifinity Web UI: ${project.artifactId}</name>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>passwordstore.app</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>server.app</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>systemmonitor.app</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>c11.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>fortran2008.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>java7.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>metrics.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>repository.directory.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>repository.git.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
			<artifactId>repository.subversion.plugin</artifactId>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>wildfly.test</artifactId>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-firefox-driver</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<deployables>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>c11.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>c11.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>fortran2008.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>fortran2008.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>java7.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>java7.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>metrics.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>metrics.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.server</groupId>
							<artifactId>passwordstore.app</artifactId>
							<type>ear</type>
							<properties>
								<name>passwordstore.app.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.server</groupId>
							<artifactId>server.app</artifactId>
							<type>ear</type>
							<properties>
								<name>server.app.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.server</groupId>
							<artifactId>systemmonitor.app</artifactId>
							<type>ear</type>
							<properties>
								<name>systemmonitor.app.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>repository.directory.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>respository.directory.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>repository.git.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>respository.git.plugin.ear</name>
							</properties>
						</deployable>
						<deployable>
							<groupId>com.puresoltechnologies.purifinity.plugins</groupId>
							<artifactId>repository.subversion.plugin</artifactId>
							<type>ear</type>
							<properties>
								<name>respository.subversion.plugin.ear</name>
							</properties>
						</deployable>
					</deployables>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
