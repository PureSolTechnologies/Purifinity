<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.server</groupId>
		<artifactId>wildfly.modules</artifactId>
		<version>0.4.0-SNAPSHOT</version>
	</parent>

	<artifactId>wildfly.modules.hadoop</artifactId>
	<name>Purifinity Server: ${project.artifactId}</name>
	<packaging>pom</packaging>

	<dependencies>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-common</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-auth</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-hdfs</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.htrace</groupId>
			<artifactId>htrace-core</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.google.protobuf</groupId>
			<artifactId>protobuf-java</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>src/assembly/hadoop-module.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>hadoop-wildfly-module-packaging</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-module-configuration</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${wildfly.module.dir}</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-module-jar</id>
						<phase>validate</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.apache.hadoop</groupId>
									<artifactId>hadoop-common</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.hadoop</groupId>
									<artifactId>hadoop-hdfs</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.hadoop</groupId>
									<artifactId>hadoop-auth</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>org.apache.htrace</groupId>
									<artifactId>htrace-core</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.google.protobuf</groupId>
									<artifactId>protobuf-java</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>commons-configuration</groupId>
									<artifactId>commons-configuration</artifactId>
									<type>jar</type>
									<overWrite>false</overWrite>
									<outputDirectory>${wildfly.module.dir}/org/apache/hadoop/client/main</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>