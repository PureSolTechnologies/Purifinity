<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>JavaServerFaces</display-name>

	<!-- Change to "Production" when you are ready to deploy -->
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>

	<!-- Welcome page -->
	<welcome-file-list>
		<welcome-file>index.jsf</welcome-file>
	</welcome-file-list>

	<!-- JSF mapping -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<!-- Map these files with JSF -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>

	<!-- Error Pages -->
	<error-page>
		<location>/errors/general_error.jsf</location>
	</error-page>
	<error-page>
		<error-code>401</error-code>
		<location>/errors/status_401.jsf</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/errors/status_403.jsf</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/errors/status_404.jsf</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/errors/status_500.jsf</location>
	</error-page>
	<error-page>
		<error-code>503</error-code>
		<location>/errors/status_503.jsf</location>
	</error-page>

	<!-- Security -->
	<security-constraint>
		<display-name>Constraint</display-name>
		<web-resource-collection>
			<web-resource-name>account</web-resource-name>
			<description />
			<url-pattern>/account/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<description />
			<role-name>User</role-name>
		</auth-constraint>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<security-constraint>
		<display-name>Constraint</display-name>
		<web-resource-collection>
			<web-resource-name>login</web-resource-name>
			<description />
			<url-pattern>/login.jsf</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>login_by_user</web-resource-name>
			<description />
			<url-pattern>/login_by_user.jsf</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>create_account</web-resource-name>
			<description />
			<url-pattern>/create_account.jsf</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>activate_account</web-resource-name>
			<description />
			<url-pattern>/activate_account.jsf</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>passwordstore</realm-name>
		<form-login-config>
			<form-login-page>/login.jsf</form-login-page>
			<form-error-page>/login_error.jsf</form-error-page>
		</form-login-config>
	</login-config>
	<security-role>
		<description>This is the standard user for the web interface of the job. Every user authenticated via web is a user.</description>
		<role-name>User</role-name>
	</security-role>

</web-app>
