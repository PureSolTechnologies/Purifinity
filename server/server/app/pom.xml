<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.server</groupId>
		<artifactId>server</artifactId>
		<version>0.3.0-SNAPSHOT</version>
	</parent>

	<artifactId>server.app</artifactId>
	<name>Purifinity Server: ${project.artifactId}</name>
	<packaging>ear</packaging>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>common.ui</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>server.core.impl</artifactId>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>server.rest.impl</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>server.socket.impl</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>server.ui</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>org.primefaces</groupId>
			<artifactId>primefaces</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.primefaces.themes</groupId>
			<artifactId>all-themes</artifactId>
			<scope>runtime</scope>
		</dependency>
	</dependencies>

<build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
           <modules>
             <webModule>
               <groupId>com.puresoltechnologies.purifinity.server</groupId>
               <artifactId>server.rest.impl</artifactId>
               <contextRoot>/purifinityserver/rest</contextRoot>
             </webModule>
             <webModule>
               <groupId>com.puresoltechnologies.purifinity.server</groupId>
               <artifactId>server.socket.impl</artifactId>
               <contextRoot>/purifinityserver/socket</contextRoot>
             </webModule>
             <webModule>
               <groupId>com.puresoltechnologies.purifinity.server</groupId>
               <artifactId>server.ui</artifactId>
               <contextRoot>/</contextRoot>
             </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
  
</project>