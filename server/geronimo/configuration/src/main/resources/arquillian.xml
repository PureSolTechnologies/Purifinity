<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

   <defaultProtocol type="Servlet 3.0" />

	<container qualifier="jboss7" default="true">
		<configuration>
			<property name="jbossHome">${work.dir}/cargo/jboss-as-dist-${jboss.version}/jboss-as-${jboss.version}</property>
			<property name="javaVmArguments">${jboss.options} -Djboss.server.base.dir=target/jboss -Dserver.config.directory=${server.config.directory} -Dneo4j.dir=${neo4j.dir}</property>
			<property name="serverConfig">standalone.xml</property>
		</configuration>
	</container>

	<engine>
		<property name="deploymentExportPath">target/deployments</property>
	</engine>
	
</arquillian>
