		<jboss.http.port>8080</jboss.http.port>
		<server.config.directory>${work.dir}/config</server.config.directory>
		<server.data.directory>${work.dir}/data</server.data.directory>
		<jboss.debug.options>-Xrunjdwp:transport=dt_socket,address=8000,server=y,suspend=n</jboss.debug.options>
