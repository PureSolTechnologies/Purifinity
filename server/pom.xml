	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>2.5.1</version>
					<configuration>
						<source>1.7</source>
						<target>1.7</target>
						<encoding>UTF-8</encoding>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ear-plugin</artifactId>
					<version>2.7</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.2</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ejb-plugin</artifactId>
					<version>2.3</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cassandra-maven-plugin</artifactId>
					<version>2.0.0-1</version>
					<executions>
						<execution>
							<id>startCassandra</id>
							<inherited>true</inherited>
							<phase>pre-integration-test</phase>
							<goals>
								<goal>start</goal>
							</goals>
						</execution>
						<execution>
							<id>stopCassandra</id>
							<inherited>true</inherited>
							<phase>post-integration-test</phase>
							<goals>
								<goal>stop</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<startNativeTransport>true</startNativeTransport>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.cargo</groupId>
					<artifactId>cargo-maven2-plugin</artifactId>
					<version>1.2.2</version>
					<executions>
						<execution>
							<id>JBoss Configuration</id>
							<phase>package</phase>
							<goals>
								<goal>configure</goal>
								<goal>deployer-deploy</goal>
							</goals>
						</execution>
					</executions>
					<configuration>
						<!-- wait>false</wait -->
						<container>
							<containerId>jboss71x</containerId>
							<timeout>60000</timeout>
							<artifactInstaller>
								<groupId>org.jboss.as</groupId>
								<artifactId>jboss-as-dist</artifactId>
								<version>${jboss.version}</version>
								<type>zip</type>
								<extractDir>${cargo.dir}</extractDir>
							</artifactInstaller>
						</container>
						<configuration>
							<type>standalone</type>
							<home>${arquillian.test.dir}</home>
							<configfiles>
								<configfile>
									<file>${cargo.dir}/template/standalone/configuration/standalone.xml</file>
									<todir>configuration</todir>
								</configfile>
							</configfiles>
							<files>
								<file>
									<file>${cargo.dir}/template/standalone</file>
									<todir>/</todir>
								</file>
							</files>
							<properties>
								<cargo.jboss.configuration>default</cargo.jboss.configuration>
								<cargo.servlet.port>8080</cargo.servlet.port>
								<cargo.rmi.port>1099</cargo.rmi.port>
								<cargo.jvmargs>${jboss.jvm.options}</cargo.jvmargs>
								<cargo.servlet.port>${jboss.http.port}</cargo.servlet.port>
								<cargo.logging>${cargo.logging}</cargo.logging>
							</properties>
						</configuration>
					</configuration>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											com.puresoltechnologies.maven.plugins
										</groupId>
										<artifactId>
											license-maven-plugin
										</artifactId>
										<versionRange>
											[1.1.1,)
										</versionRange>
										<goals>
											<goal>validate</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>com.puresoltechnologies.maven.plugins</groupId>
				<artifactId>license-maven-plugin</artifactId>
				<version>1.1.1</version>
				<executions>
					<execution>
						<phase>validate</phase>
						<goals>
							<goal>validate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<recursive>true</recursive>
					<validLicenses>
						<validLicense>PureSol Technologies Commercial License</validLicense>
						<!-- Apache License -->
						<validLicense>Apache 2</validLicense>
						<validLicense>Apache License</validLicense>
						<validLicense>Apache License 2.0</validLicense>
						<validLicense>Apache License Version 2.0</validLicense>
						<validLicense>Apache License, Version 2.0</validLicense>
						<validLicense>Apache License, version 2.0</validLicense>
						<validLicense>Apache Public License 2.0</validLicense>
						<validLicense>Apache Software License - Version 2.0</validLicense>
						<validLicense>The Apache Software License, Version 2.0</validLicense>
						<!-- BSD License -->
						<validLicense>BSD</validLicense>
						<validLicense>BSD 3-Clause</validLicense>
						<validLicense>BSD License</validLicense>
						<validLicense>BSD licence</validLicense>
						<validLicense>BSD style</validLicense>
						<validLicense>ISC/BSD License</validLicense>
						<validLicense>New BSD License</validLicense>
						<!-- CDDL -->
						<validLicense>CDDL + GPLv2 with classpath exception</validLicense>
						<validLicense>CDDL v1.1 / GPL v2 dual license</validLicense>
						<validLicense>CDDL or GPLv2 with exceptions</validLicense>
						<validLicense>Common Development and Distribution License</validLicense>
						<!-- CPL -->
						<validLicense>Common Public License Version 1.0</validLicense>
						<!-- EPL -->
						<validLicense>Eclipse Public License - Version 1.0</validLicense>
						<validLicense>Eclipse Public License, Version 1.0</validLicense>
						<!-- GPL with Classpath Exception -->
						<validLicense>GPLv2 (with classpath exception)</validLicense>
						<validLicense><![CDATA[GNU General Public License, Version 2 with the Classpath Exception]]></validLicense>
						<!-- LGPL -->
						<validLicense>lgpl</validLicense>
						<validLicense>lgpl_v2_1</validLicense>
						<validLicense>LGPL 2.1</validLicense>
						<validLicense>GNU Lesser General Public License</validLicense>
						<validLicense>GNU Lesser General Public License, version 2.1</validLicense>
						<!-- MPL -->
						<validLicenses>MPL 1.1</validLicenses>
						<!-- MIT License -->
						<validLicense>MIT License</validLicense>
						<validLicense>The MIT License</validLicense>
						<validLicense>The MIT license</validLicense>
						<!-- Public Domain -->
						<validLicense>Public Domain</validLicense>
						<validLicense>Public domain, Sun Microsoystems</validLicense>
						<validLicense>provided without support or warranty</validLicense>
						<!-- Snaptree License -->
						<validLicense>SNAPTREE LICENSE</validLicense>
					</validLicenses>
					<approvedDependencies>
						<approvedDependency>commons-beanutils:commons-beanutils:1.7.0</approvedDependency>
						<approvedDependency>colt:colt:1.2.0</approvedDependency>
						<approvedDependency>javax.servlet:servlet-api:2.5</approvedDependency>
						<approvedDependency>org.apache.cassandra.deps:avro:1.4.0-cassandra-1</approvedDependency>
						<approvedDependency>org.antlr:antlr.*:.*</approvedDependency>
						<approvedDependency>org.osgi:org.osgi.*:4.2.0</approvedDependency>
						<approvedDependency>system:jdk-tools:jdk</approvedDependency>
					</approvedDependencies>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<version>6</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<skinnyWars>true</skinnyWars>
					<applicationName>${project.artifactId}</applicationName>
					<fileNameMapping>no-version</fileNameMapping>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Build-Number>${build.number}</Build-Number>
							<Build-SCM>${build.scm}</Build-SCM>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addClasspath>true</addClasspath>
							<classpathPrefix>lib/</classpathPrefix>
						</manifest>
						<manifestEntries>
							<Build-Number>${build.number}</Build-Number>
							<Build-SCM>${build.scm}</Build-SCM>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
				<configuration>
					<ejbVersion>3.1</ejbVersion>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
							<Build-Number>${build.number}</Build-Number>
							<Build-SCM>${build.scm}</Build-SCM>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>database</module>
		<module>jboss</module>
		<module>logger</module>
		<module>eventlogger</module>
	</modules>

</project>
