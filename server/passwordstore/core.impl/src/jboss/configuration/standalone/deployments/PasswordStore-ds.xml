<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<datasource jta="false" jndi-name="java:/ds/PasswordStore-ds"
		enabled="true" use-java-context="true" pool-name="PasswordStore-ds-pool">
		<!-- jdbc:postgresql://host:port/database -->
		<connection-url>jdbc:postgresql://${passwordstore.jdbc.host}:${passwordstore.jdbc.port}/${passwordstore.jdbc.database}
		</connection-url>
		<driver-class>org.postgresql.Driver</driver-class>
		<driver>postgresql-8.4-702.jdbc4.jar</driver>
		<security>
			<user-name>${passwordstore.jdbc.user}</user-name>
			<password>${passwordstore.jdbc.password}</password>
		</security>
	</datasource>
</datasources>
