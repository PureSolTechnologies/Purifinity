<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.server</groupId>
		<artifactId>passwordstore</artifactId>
		<version>0.3.2-SNAPSHOT</version>
	</parent>

	<artifactId>passwordstore.core.impl</artifactId>
	<name>Purifinity Server: ${project.artifactId}</name>
	<packaging>ejb</packaging>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>database.cassandra</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>passwordstore.core.api</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>passwordstore.utils</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>systemmonitor.client</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.server</groupId>
			<artifactId>wildfly.utils</artifactId>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ejb-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-jboss-configuration</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>process-resources</phase>
						<configuration>
							<includeEmptyDirs>true</includeEmptyDirs>
							<outputDirectory>${cargo.dir}/template</outputDirectory>
							<resources>
								<resource>
									<!-- XML files are filtered to replace properties. -->
									<directory>src/jboss/configuration</directory>
									<filtering>true</filtering>
									<includes>
										<include>**/*.xml</include>
									</includes>
								</resource>
								<resource>
									<!-- Non-XML files are not filtered. -->
									<directory>src/jboss/configuration</directory>
									<excludes>
										<exclude>**/*.xml</exclude>
									</excludes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>