			<artifactId>license.client.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>license.domain.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>configuration.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>math.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>utils.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>trees.bundle</artifactId>
			<version>${commons.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>uhura.bundle</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>coding.analysis.api.bundle</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>coding.analysis.impl.bundle</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>coding.evaluation.api.bundle</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
