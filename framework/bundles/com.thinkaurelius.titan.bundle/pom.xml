<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.framework</groupId>
		<artifactId>bundles</artifactId>
		<version>0.1.1-SNAPSHOT</version>
	</parent>

	<groupId>com.thinkaurelius</groupId>
	<artifactId>titan.bundle</artifactId>
	<name>${project.groupId}.${project.artifactId}</name>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.framework</groupId>
			<artifactId>commons.test</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thinkaurelius.titan</groupId>
			<artifactId>titan-core</artifactId>
		</dependency>
		<dependency>
			<groupId>com.thinkaurelius.titan</groupId>
			<artifactId>titan-cassandra</artifactId>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>

	<properties>
		<bundle.namespace>com.thinkaurelius.titan</bundle.namespace>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<manifestLocation>META-INF</manifestLocation>
					<instructions>
						<!-- The Bundle-SymbolicName is fixed in this way. Otherwise Tycho 
							will not find the bundle. -->
						<Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
						<Bundle-Name>${project.groupId}.${project.artifactId}</Bundle-Name>
						<Bundle-Version>0.4.1</Bundle-Version>
						<Bundle-Vendor>${project.organization.name}</Bundle-Vendor>
						<!-- assume public classes are in the top package, and private classes 
							are under ".internal" -->
						<Export-Package>${bundle.namespace}*;version="${project.version}",com.tinkerpop.blueprint*,org.apache.commons.configuration.*,org.apache.commons.io.*</Export-Package>
						<Import-Package>com.sun.jdmk.comm.*;resolution:=optional,com.sun.jna.*;resolution:=optional,com.sun.tools.apt.*;resolution:=optional,com.sun.tools.javac.*;resolution:=optional,com.sun.tools.javah.*;resolution:=optional,com.thoughtworks.*;resolution:=optional,com.tinkerpop.blueprints.impls.sail.*;resolution:=optional,com.vividsolutions.*;resolution:=optional,edu.emory.*;resolution:=optional,gnu.gcj.*;resolution:=optional,com.mysql.*;resolution:=optional,COM.*;resolution:=optional,com.google.protobuf.*;resolution:=optional,com.ibm.uvm.tools.*;resolution:=optional,org.apache.hadoop.*;resolution:=optional,org.apache.harmony.*;resolution:=optional,org.apache.log.*;resolution:=optional,org.apache.pig.*;resolution:=optional,org.bouncycastle.*;resolution:=optional,kaffe.util.*;resolution:=optional,org.acplt.*;resolution:=optional,org.apache.avalon.*;resolution:=optional,org.apache.bsf.*;resolution:=optional,org.apache.commons.vfs.*;resolution:=optional,joptsimple.*;resolution:=optional,jrockit.vm.*;resolution:=optional,javax.jmdns.*;resolution:=optional,sun.*;resolution:=optional,weblogic.*;resolution:=optional,org.jboss.*;resolution:=optional,com.jcraft.jsch.*;resolution:=optional,com.sun.jdi.*;resolution:=optional,javax.inject.*;resolution:=optional,javax.jms.*;resolution:=optional,javax.mail.*;resolution:=optional,javax.servlet.*;resolution:=optional,junit.*;resolution:=optional,org.apache.commons.httpclient.*;resolution:=optional,org.apache.commons.jxpath.*;resolution:=optional,org.apache.env.*;resolution:=optional,org.apache.oro.*;resolution:=optional,org.apache.velocity.*;resolution:=optional,org.h2.*;resolution:=optional,org.hamcrest.*;resolution:=optional,org.junit.*;resolution:=optional,org.slf4j.*;resolution:=optional,*</Import-Package>
						<Bundle-Activator>${bundle.namespace}.Activator</Bundle-Activator>
						<!-- embed compile/runtime dependencies using path that matches the 
							copied dependency folder -->
						<Embed-Dependency>*;scope=compile|runtime;inline=false</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<Embed-Directory>lib</Embed-Directory>
						<Embed-StripGroup>true</Embed-StripGroup>
						<Bundle-ActivationPolicy>lazy</Bundle-ActivationPolicy>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>CleanManifest</id>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>