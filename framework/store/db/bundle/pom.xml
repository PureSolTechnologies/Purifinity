<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity.framework</groupId>
		<artifactId>store.db</artifactId>
		<version>0.1.1-SNAPSHOT</version>
	</parent>

	<artifactId>store.db.bundle</artifactId>
	<name>${project.groupId}.${project.artifactId}</name>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.framework</groupId>
			<artifactId>store.db.lib</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.framework</groupId>
			<artifactId>database.cassandra.utils</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.framework</groupId>
			<artifactId>database.titan.utils</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity.api</groupId>
			<artifactId>evaluation.api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.eclipse</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>

	<properties>
		<bundle.namespace>com.puresoltechnologies.purifinity.framework.store.db</bundle.namespace>
		<package.imports><![CDATA[
		com.puresoltechnologies.commons.math,
		com.puresoltechnologies.commons.math.statistics,
		com.puresoltechnologies.parsers.api.ust,
		com.puresoltechnologies.parsers.impl.ust,
		com.puresoltechnologies.parsers.impl.ust.declarations,
		com.puresoltechnologies.parsers.impl.ust.modifiers,
		com.puresoltechnologies.parsers.impl.ust.types,
		com.puresoltechnologies.parsers.impl.ust.arrays,
		com.puresoltechnologies.parsers.impl.ust.facilities,
		com.puresoltechnologies.parsers.impl.ust.comments,
		com.puresoltechnologies.parsers.impl.ust.eval,
		com.puresoltechnologies.parsers.impl.ust.literals,
		com.puresoltechnologies.parsers.impl.ust.expressions,
		com.puresoltechnologies.parsers.impl.ust.packages,
		com.puresoltechnologies.parsers.impl.ust.terminal,
		com.puresoltechnologies.parsers.impl.ust.statements,
		com.puresoltechnologies.purifinity.evaluation.api,
		com.puresoltechnologies.purifinity.framework.evaluation.commons.impl
		]]></package.imports>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Import-Package>*,${package.imports}</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>CleanManifest</id>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>