<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.puresoltechnologies.purifinity</groupId>
		<artifactId>coding.store.fs</artifactId>
		<version>0.1.0</version>
	</parent>

	<artifactId>coding.store.fs.bundle</artifactId>
	<name>${project.groupId}.${project.artifactId}</name>
	<packaging>bundle</packaging>

	<dependencies>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>coding.store.fs.lib</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.commons</groupId>
			<artifactId>osgi</artifactId>
		</dependency>
		<dependency>
			<groupId>com.puresoltechnologies.purifinity</groupId>
			<artifactId>coding.evaluation.api.lib</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.osgi</groupId>
			<artifactId>org.osgi.core</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<properties>
		<bundle.namespace>com.puresoltechnologies.purifinity.coding.store.fs</bundle.namespace>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Import-Package>*,com.puresoltechnologies.purifinity.uhura.parser,com.puresoltechnologies.purifinity.uhura.lexer,com.puresoltechnologies.purifinity.uhura.grammar.token,com.puresoltechnologies.purifinity.uhura.ust,com.puresoltechnologies.purifinity.uhura.ust.terminal,com.puresoltechnologies.commons.math,com.puresoltechnologies.commons.math.statistics,com.puresoltechnologies.purifinity.coding.evaluation.impl</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<executions>
					<execution>
						<id>CleanManifest</id>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>